<!DOCTYPE html>
<html>
<head>
  <title>Pooja Master</title>
</head>
<body>
  <h2>Pooja Master</h2>

  <form method="POST" action="/pooja-master/add">
    <input name="pooja_name" placeholder="Pooja Name" required>
    <input name="price" placeholder="Price" required>
    <button type="submit">Add Pooja</button>
  </form>

  <hr>

  <table border="1" cellpadding="5">
    <tr><th>ID</th><th>Name</th><th>Price</th><th>Update</th><th>Delete</th></tr>
    <% poojas.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.pooja_name %></td>
        <td>
          <form method="POST" action="/pooja-master/update/<%= p.id %>">
            <input name="price" value="<%= p.price %>" size="5">
            <button>Update</button>
          </form>
        </td>
        <td>
          <form method="POST" action="/pooja-master/delete/<%= p.id %>">
            <button onclick="return confirm('Delete <%= p.pooja_name %>?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

  <br><a href="/billing">‚Üê Back to Billing</a>
</body>
</html>
